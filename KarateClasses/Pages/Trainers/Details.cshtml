        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.Email)
        </dd>
