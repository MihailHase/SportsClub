@page
@model SportsCLubClasses.Pages.Trainers.CreateModel

@{
    ViewData["Title"] = "Create";
}
<style>
    .transparent-background {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 15px;
        color: black;
        border-radius: 10px;
    }
</style>

<h1>Create</h1>
<h4>Trainer</h4>
<hr/>
<div class="row">
    <div class="col-md-4 transparent-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Trainer.FirstName" class="control-label"></label>
                <input asp-for="Trainer.FirstName" class="form-control" />
                <span asp-validation-for="Trainer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.LastName" class="control-label"></label>
                <input asp-for="Trainer.LastName" class="form-control" />
                <span asp-validation-for="Trainer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.Details" class="control-label"></label>
                <input asp-for="Trainer.Details" class="form-control" />
                <span asp-validation-for="Trainer.Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.PhoneNumber" class="control-label"></label>
                <input asp-for="Trainer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Trainer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trainer.Email" class="control-label"></label>
                <input asp-for="Trainer.Email" class="form-control" />
                <span asp-validation-for="Trainer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}