@page
@model SportsCLubClasses.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Members";
}
<style>
    a.button {
        display: inline-block;
        padding: 10px;
        margin: 5px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        color: white;
        background-color: #007bff; /* You can change the color to your preference */
    }
    body {
        color: white;
    }

    .table {
        background-color: rgba(255, 255, 255, 0.8); /* Transparent white background */
        color: black; /* Text color for table rows */
    }
</style>

<h1>Members</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Member)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-info">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
