@page
@model SportsCLubClasses.Pages.SportsCLubs.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    .transparent-background {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 15px;
        color: black;
        border-radius: 10px;
    }
</style>

<h1>Edit</h1>
<h4>SportsCLub</h4>
<hr/>
<div class="row">
    <div class="col-md-4 transparent-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SportsCLub.ID" />
            <div class="form-group">
                <label asp-for="SportsCLub.Name" class="control-label"></label>
                <input asp-for="SportsCLub.Name" class="form-control" />
                <span asp-validation-for="SportsCLub.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportsCLub.Description" class="control-label"></label>
                <input asp-for="SportsCLub.Description" class="form-control" />
                <span asp-validation-for="SportsCLub.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportsCLub.Duration" class="control-label"></label>
                <input asp-for="SportsCLub.Duration" class="form-control" />
                <span asp-validation-for="SportsCLub.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportsCLub.Price" class="control-label"></label>
                <input asp-for="SportsCLub.Price" class="form-control" />
                <span asp-validation-for="SportsCLub.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportsCLub.TrainerID" class="control-label"></label>
                <select asp-for="SportsCLub.TrainerID" class="form-control" asp-items="ViewBag.TrainerID"></select>
                <span asp-validation-for="SportsCLub.TrainerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportsCLub.LocationID" class="control-label"></label>
                <select asp-for="SportsCLub.LocationID" class="form-control" asp-items="ViewBag.LocationID"></select>
                <span asp-validation-for="SportsCLub.LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
