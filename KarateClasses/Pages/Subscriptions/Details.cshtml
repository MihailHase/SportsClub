@page
@model SportsCLubClasses.Pages.Subscriptions.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
    dl.row {
        background-color: rgba(255, 255, 255, 0.8); /* Transparent white background */
        color: black; /* Text color for table rows */
    }


    a.button {
        display: inline-block;
        padding: 10px;
        margin: 5px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        color: white;
        background-color: #007bff; /* You can change the color to your preference */
    }
</style>

<h1>Details</h1>

<div>
    <h4>Subscription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subscription.Member)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.Member.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subscription.SportsCLub)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.SportsCLub.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subscription.StartingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.StartingDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Subscription?.ID" class="btn btn-primary">Edit</a> |

    <a asp-page="./Index">Back to List</a>
</div>
