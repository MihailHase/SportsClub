@page
@model SportsCLubClasses.Pages.Subscriptions.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    .transparent-background {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 15px;
        color: black;
        border-radius: 10px;
    }
</style>

<h1>Edit</h1>
<h4>Subscription</h4>
<hr/>
<div class="row">
    <div class="col-md-4 transparent-background">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subscription.ID" />
            <div class="form-group">
                <label asp-for="Subscription.MemberID" class="control-label"></label>
                <select asp-for="Subscription.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                <span asp-validation-for="Subscription.MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.SportsCLubID" class="control-label"></label>
                <select asp-for="Subscription.SportsCLubID" class="form-control" asp-items="ViewBag.SportsCLubID"></select>
                <span asp-validation-for="Subscription.SportsCLubID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.StartingDate" class="control-label"></label>
                <input asp-for="Subscription.StartingDate" class="form-control" />
                <span asp-validation-for="Subscription.StartingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
